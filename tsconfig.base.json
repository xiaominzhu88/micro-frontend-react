{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@micro-frontend-react/common-ui": ["libs/common-ui/src/index.ts"],
      "@micro-frontend-react/fetch": ["libs/fetch/src/index.ts"],
      "@micro-frontend-react/micro-react/fetch-hook": [
        "libs/micro-react/fetch-hook/src/index.ts"
      ],
      "@micro-frontend-react/shared/data-context": [
        "libs/shared/data-context/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
